<UserControl 
    x:Class="Restless.Panama.View.TitleEditSelfPublished"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:tk="http://schemas.restless.toolkit.com/2021"
    xmlns:view="clr-namespace:Restless.Panama.View"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="554">
    <StackPanel>
        <DataGrid
            x:Name="grid"
            Style="{StaticResource DataGridEdit}"
            ItemsSource="{Binding Path=SelfPublished.DataView}"
            SelectedItem="{Binding SelfPublished.SelectedItem}"
            tk:DataGridColumns.Columns="{Binding SelfPublished.Columns}">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="tk:DataGrid.DoubleClickCommand" Value="{Binding ElementName=grid, Path=DataContext.SelfPublished.OpenRowCommand}"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        <ToolBarTray>
            <ToolBar Style="{StaticResource ToolBarCommandHolder}">
                <Button Command="{Binding SelfPublished.Commands[PublishedAdd]}" Content="Add" ToolTip="Add a published entry"/>
                <Button Command="{Binding SelfPublished.Commands[PublishedRemove]}" Content="Remove" ToolTip="Remove the selected entry"/>
            </ToolBar>
        </ToolBarTray>
        <view:SelfPublishedEdit Visibility="{Binding SelfPublished.EditVisibility}"/>
    </StackPanel>
</UserControl>