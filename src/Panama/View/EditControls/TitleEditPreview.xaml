<Grid
    x:Class="Restless.Panama.View.TitleEditPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:tk="http://schemas.restless.toolkit.com/2021"
    xmlns:r="clr-namespace:Restless.Panama.Resources"
    xmlns:vm="clr-namespace:Restless.Panama.ViewModel" d:DataContext="{d:DesignInstance Type=vm:TitleViewModel}"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="400"
    Style="{StaticResource DataEntryPanelStyle}">
    <!-- Title edit 6 (preview) -->
    <TextBox
        tk:Property.IsVisible="{Binding IsOpenXml}"
        Style="{StaticResource TextBoxMultiStretchStyle}"
        Text="{Binding PreviewText, Mode=OneWay}"/>

    <TextBlock
        tk:Property.IsCollapsed="{Binding IsOpenXml}"
        FontSize="16"
        Foreground="{StaticResource DarkAlertForegroundBrush}"
        HorizontalAlignment="Center"
        Text="{x:Static r:Strings.TextDocumentPreviewNotSupported}"/>
</Grid>