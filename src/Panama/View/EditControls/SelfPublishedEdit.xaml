<UserControl 
    x:Class="Restless.App.Panama.View.SelfPublishedEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:con="clr-namespace:Restless.Tools.Controls;assembly=Restless.Tools.Controls"
    mc:Ignorable="d" 
    d:DesignHeight="360" d:DesignWidth="284">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Label>Published Date</Label>
            <con:RestlessCalendar Grid.Row="1" SelectedDateUtc="{Binding SelfPublished.PublishedDate}"/>
            <StackPanel Grid.Row="1" Grid.Column="1">
                <Button Command="{Binding SelfPublished.Commands[ClearPublishedDate]}">Clear</Button>
            </StackPanel>
        </Grid>
        <Label>Url</Label>
        <TextBox Text="{Binding SelfPublished.SelectedRow[url]}" />
        <Label>Notes</Label>
        <TextBox Style="{StaticResource TextBoxMulti}" Text="{Binding SelfPublished.SelectedRow[notes]}"/>
    </StackPanel>
</UserControl>
