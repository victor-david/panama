<UserControl
    x:Class="Restless.Panama.View.SubmissionEditTitle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:tk="http://schemas.restless.toolkit.com/2021"
    xmlns:r="clr-namespace:Restless.Panama.Resources"    
    xmlns:vm="clr-namespace:Restless.Panama.ViewModel"
    d:DataContext="{d:DesignInstance Type=vm:SubmissionViewModel}"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="500">
    <Grid tk:Property.RowHeights="200,Auto">
        <DataGrid
            Style="{StaticResource DataGridEditLockedStyle}"
            ItemsSource="{Binding Titles.ListView}"
            SelectedItem="{Binding Titles.SelectedItem}"
            tk:DataGridColumns.Columns="{Binding Titles.Columns}">

            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding OpenRowCommand}"/>
            </DataGrid.InputBindings>
            
        </DataGrid>

        <StatusBar Grid.Row="1" Margin="0,6">

            <StatusBar.Resources>
                <Style TargetType="tk:IconButton" BasedOn="{StaticResource SmallIconButtonStyle}">
                    <Setter Property="Icon" Value="{StaticResource SquareSmallGrayIconKey}"/>
                </Style>
            </StatusBar.Resources>
            <tk:IconButton
                Padding="0"
                Icon="{StaticResource ArrowUpMediumIconKey}"
                Command="{Binding Titles.Commands[TitleMoveUp]}"/>

            <tk:IconButton
                Padding="0"
                Icon="{StaticResource ArrowDownMediumIconKey}"
                Command="{Binding Titles.Commands[TitleMoveDown]}"/>

            <Separator/>

            <tk:IconButton 
                Command="{Binding Titles.Commands[SetStatusAccepted]}" 
                Content="Accepted"
                ToolTip="Set the status of the selected title to accepted"/>
            
            <tk:IconButton
                Command="{Binding Titles.Commands[SetStatusWithdrawn]}"
                Content="Withdrawn"
                ToolTip="Set the status of the selected title to withdrawn"/>
            
            <tk:IconButton
                Command="{Binding Titles.Commands[ResetStatus]}"
                Content="Reset"
                ToolTip="Reset the status of the selected title"/>
            
            <Separator/>
            
            <tk:IconButton
                Command="{Binding Titles.Commands[RemoveFromSubmission]}"
                Content="Remove"
                ToolTip="Remove the selected title from the submission (does not affect the file system)"/>
            
            <Separator/>
            
            <tk:IconButton
                Command="{Binding Titles.Commands[CopyToClipboard]}"
                Content="Copy"
                ToolTip="Copy the list of titles to the clipboard"/>
            
        </StatusBar>

    </Grid>
</UserControl>