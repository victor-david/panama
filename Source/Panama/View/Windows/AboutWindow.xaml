<Window 
    x:Class="Restless.App.Panama.View.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About" Height="350" Width="525" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    
    <Grid Background="{StaticResource HorizontalLightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="4"/>
            </Style>          
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="4"/>
            </Style>
        </Grid.Resources>
        <StackPanel Grid.Column="0">
            <TextBlock>
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0} {1}" Mode="OneTime">
                        <Binding Path="AppInfo.Assembly.Title" />
                        <Binding Path="AppInfo.Assembly.Version" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock Text="{Binding Path=AppInfo.Assembly.Company, Mode=OneTime}" />
            <TextBlock Text="{Binding Path=AppInfo.Assembly.Copyright, Mode=OneTime}" />
            <TextBlock Text="{Binding Path=AppInfo.Assembly.Description, Mode=OneTime}" TextWrapping="Wrap" />
            <Label>Framework</Label>
            <TextBlock Margin="18,0" Text="{Binding Path=AppInfo.Assembly.FrameworkVersion, Mode=OneTime}" />
            <Label>Executable</Label>
            <TextBlock Margin="18,0" Text="{Binding Path=AppInfo.Assembly.Location, Mode=OneTime}" TextWrapping="Wrap" />
            <Label>64 Bit</Label>
            <TextBlock Margin="18,0" Text="{Binding Path=AppInfo.Is64Bit, Mode=OneTime}" />
            <Label>Database</Label>
            <TextBlock  Margin="18,0" Text="{Binding Path=AppInfo.DatabaseFileName, Mode=OneTime}" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
